#include <stdio.h>
int main() {
    int num, rem;
    char ch[20];
    int i=0;
    printf("Enter a decimal number: ");
    scanf("%d", &num);

    while (num != 0) {
        rem = num % 16;
        if (rem < 10)
            ch[i] = rem + 48;
        else
            ch[i] = rem + 55;
        num = num / 16;
        i++;
    }
    for (int j=i-1; j >= 0; j--) {
        printf("%c", ch[j]);
    }
    return 0;
}

