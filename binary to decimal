#include<stdio.h>
int main(){
    int n,sum=0,base=1;
    printf("Enter the number :");
    scanf("%d",&n);
    int rem;
    while(n!=0){ 
        rem = n%10;
        sum = sum +rem*base; 
        base = 2*base;
        n = n/10;
    }
    printf("\nThe decimal number is %d",sum);
    return 0; 
}   
